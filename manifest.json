{
  "manifest_version": 3,
  "name": "ChordMaster Pro",
  "version": "1.0",
  "description": "Interactive Guitar Chord Trainer & Quiz",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.svg",
      "48": "images/icon.svg",
      "128": "images/icon.svg"
    }
  },
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "permissions": [
    "storage"
  ]
}